node{
    stage('SCM Checkout'){
       git credentialsId: 'abeb6fe1-4993-4bce-b78c-c839ab9d8e3d', url: 'https://github.com/akanksha-bansal/docker-maven-app'
   }
    stage('Mvn Package'){
     def mvnHome = tool name: 'maven-3', type: 'maven'
     def mvnCMD = "${mvnHome}/bin/mvn"
     sh "${mvnCMD} clean package"
   }
    stage('Build Docker Image'){
     sh 'docker build -t akankshabansal07/my-maven-app .'
   }
    stage('Push Docker Image'){
     withCredentials([string(credentialsId: 'docker-pwd', variable: 'dockerHubPwd')])  {
        sh "docker login -u akankshabansal07 -p ${dockerHubPwd}"
     }
     sh 'docker push akankshabansal07/my-maven-app'
   }
    stage('Run Container on Server'){
     def dockerRun = 'docker run -p 8080:8080 -d --name my-maven-app akankshabansal07/my-maven-app'
     sshagent(credentials: ['dev-server'], ignoreMissing: true) {
       sh "ssh -o StrictHostKeyChecking=no ec2-user@172.31.30.202 ${dockerRun}"
       sh "ssh -o"
     }
    }
}